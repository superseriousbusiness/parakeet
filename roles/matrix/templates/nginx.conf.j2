events {}
http {
    server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }};

        location /.well-known/matrix/server {
            return 200 '{"m.server": "{{ synapse_hostname }}:443"}';
        }

        location /.well-known/matrix/client { 
            return 200 '{"m.homeserver": {"base_url": "https://{{ synapse_hostname }}"}';
        }
    }
}
