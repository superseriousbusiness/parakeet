events {}
http {
    server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }};

        location /.well-known/webfinger {
            rewrite ^.*$ https://{{ gotosocial_hostname }}? permanent;
        }

        location /.well-known/nodeinfo {
            rewrite ^.*$ https://{{ gotosocial_hostname }}? permanent;
        }
    }
}
